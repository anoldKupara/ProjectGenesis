@model List<ProjectGenesis.Models.Entities.Sale>

@{
}

<form>
    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Sales</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="Sales" asp-action="CreateSale">Add Sale</a>
            </li>
        </div>
    </div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    ItemPurchased
                </th>
                <th>
                    PaymentMethod
                </th>
                <th>
                    DateOfPurchase
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => sale.ItemPurchased)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => sale.PaymentMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => sale.DateOfPurchase)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => sale.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => sale.Price)
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Sales" asp-action="EditSale" asp-route-id="@sale.Id">Edit</a> |
                        <a asp-area="" asp-controller="Sales" asp-action="DeleteSale" asp-route-id="@sale.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>