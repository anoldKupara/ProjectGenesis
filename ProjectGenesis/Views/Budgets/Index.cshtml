@model List<ProjectGenesis.Models.Entities.Budget>

@{
}


<form>
    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Budgets</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="Budgets" asp-action="CreateBudget">Add Budget</a>
            </li>
        </div>
    </div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Purpose
                </th>
                <th>
                    SourceOfFund
                </th>
                <th>
                    ProjectStartDate
                </th>
                <th>
                    ProjectEndDate
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Currency
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var budget in Model)
            {
                <tr>
                    <td>
                        @budget.Name
                    </td>
                    <td>
                        @budget.Purpose
                    </td>
                    <td>
                        @budget.SourceOfFund
                    </td>
                    <td>
                        @budget.ProjectStartDate
                    </td>
                    <td>
                        @budget.ProjectEndDate
                    </td>
                    <td>
                        @budget.Amount
                    </td>
                    <td>
                        @budget.Currency
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Budgets" asp-action="EditBudget" asp-route-id="@budget.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Budgets" asp-action="DeleteBudget" asp-route-id="@budget.Id">Delete</a>
                    </td>
                </tr>
            }
    </table>
</form>
