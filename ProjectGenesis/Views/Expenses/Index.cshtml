@model List<ProjectGenesis.Models.Entities.Expense>


@{
}

<form>
    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Expenses</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="Expenses" asp-action="CreateExpense">Add Expense</a>
            </li>
        </div>
    </div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Currency
                </th>
                <th>
                    SourceOfFund
                </th>
                <th>
                    ExpenseDate
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Currency
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>
                        @expense.Name
                    </td>
                    <td>
                        @expense.Amount
                    </td>
                    <td>
                        @expense.Currency
                    </td>
                    <td>
                        @expense.SourceOfFund
                    </td>
                    <td>
                        @expense.ExpenseDate
                    </td>
                    <td>
                        @expense.Amount
                    </td>
                    <td>
                        @expense.Currency
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Expenses" asp-action="EditExpense" asp-route-id="@expense.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Expenses" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                    </td>
                </tr>
            }
    </table>
</form>
