@model List<ProjectGenesis.Models.Entities.BirdCategory>

@{
}

<form>

    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Bird Categories</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="BirdCategories" asp-action="CreateBirdCategory">Add Bird Category</a>
            </li>
        </div>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Purpose
                </th>
                <th>
                    Breed
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var birdCategory in Model)
            {
                <tr>
                    <td>
                        @birdCategory.Name
                    </td>
                    <td>
                        @birdCategory.Purpose
                    </td>
                    <td>
                        @birdCategory.Breed
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="BirdCategories" asp-action="EditBirdCategory" asp-route-id="@birdCategory.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="BirdCategories" asp-action="DeleteBirdCategory" asp-route-id="@birdCategory.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>