@model List<ProjectGenesis.Models.Entities.User>

@{
}

<form>

    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Users</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="Users" asp-action="CreateUser">Add User</a>
            </li>
        </div>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Email
                </th>
                <th>
                    Password
                </th>
                <th>
                    DateOfBirth
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Name
                    </td>
                    <td>
                        @user.Surname
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @user.Password
                    </td>
                    <td>
                        @user.DateOfBirth
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Users" asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                        <a asp-area="" asp-controller="Users" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>