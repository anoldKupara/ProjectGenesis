@model List<ProjectGenesis.Models.Entities.Currency>

@{
}

<form>
    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Currencies</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="Currencies" asp-action="CreateCurrency">Add Currency</a>
            </li>
        </div>
    </div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Symbol
                </th>
                <th>
                    Rate
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currency in Model)
            {
                <tr>
                    <td>
                        @currency.Name
                    </td>
                    <td>
                        @currency.Symbol
                    </td>
                    <td>
                        @currency.Rate
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Currencies" asp-action="EditCurrency" asp-route-id="@currency.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Currencies" asp-action="DeleteCurrency" asp-route-id="@currency.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
