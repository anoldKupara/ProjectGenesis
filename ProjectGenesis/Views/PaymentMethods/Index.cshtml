@model List<ProjectGenesis.Models.Entities.PaymentMethod>

@{
}

<form>
    <div class="row gutters">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12">
            <h1>Payment Methods</h1>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-12">
            <li class="btn btn-link">
                <a class="btn btn-secondary" asp-area="" asp-controller="PaymentMethods" asp-action="CreatePaymentMethod">Add Payment Method</a>
            </li>
        </div>
    </div>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Payment Method Name
                </th>
                <th>
                    Currency
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paymentMethod in Model)
            {
                <tr>
                    <td>
                        @paymentMethod.Name
                    </td>
                    <td>
                        @paymentMethod.Currency
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="PaymentMethods" asp-action="EditPaymentMethod" asp-route-id="@paymentMethod.Id">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="PaymentMethods" asp-action="DeletePaymentMethod" asp-route-id="@paymentMethod.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>